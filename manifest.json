{
  "name": "Page Archiver",
  "short_name": "Archiver",
  "start_url": "./index.html",  // Notice the "./" here to ensure proper relative path.
  "scope": "./",                // Ensures all URLs are relative to the current folder.
  "display": "standalone",
  "icons": [
    {
      "src": "icon-192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "icon-512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "share_target": {
    "action": "./index.html",
    "method": "GET",
    "params": {
      "url": "url",
      "title": "title",
      "text": "text"
    }
  }
}
